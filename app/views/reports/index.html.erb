<div class="container-fluid text-center">
  <h1>Listing reports</h1>
   
  <%= link_to 'New report', new_report_path %>
  <table class="col-sm-12 text-center">
    <tr>
      <th class="text-center">Campus</th>
      <th class="text-center">Name of harasser</th>
      <th class="text-center">Description of event</th>
      <th colspan="3"></th>
    </tr>
   
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.campus_type %></td>
        <td><%= report.title %></td>
        <td><%= report.text %></td>
        <td><%= link_to 'Show', report_path(report) %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report_path(report),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>
</div>